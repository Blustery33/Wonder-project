{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

   <div class="block">
      <h2 class="pb-30 text-center">Connexion</h2>
      <form action="{{ path('app_login') }}" method="post">
         <div class="form-row">
            <label for="email">Email : </label>
            <input type="text" id="email" autofocus name="_username" value="{{ username }}" required>
         </div>
         <div class="form-row">
            <label for="password">Mot de passe : </label>
            <input type="password" id="password" name="_password" required>
         </div>
         <div class="form-row">
            <label for="remember_me" class="text-center">Se souvenir de moi</label>
            <input type="checkbox" id="remember_me" name="_remember_me">
         </div>

         <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

         {% if error %}
            <ul class="form-errors pb-20">
               <li>{{ error.messageKey | trans(error.messageData, 'security') }}</li>
            </ul>
         {% endif %}


         <button class="btn btn-primary">Connexion</button>
      </form>

   </div>

{% endblock %}
